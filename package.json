{
  "name": "bible-app",
  "description": "Simple Bible app backed by the ESV API",
  "version": "2.2.0",
  "main": "index.js",
  "author": "Craig Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "clean": "rimraf dist",
    "serve": "webpack-dev-server",
    "serve:ci": "sirv start dist --single",
    "start": "npm-run-all -p build:watch serve",
    "test": "npm-run-all test:eslint test:e2e",
    "test:ci": "npm-run-all test:ci:*",
    "test:ci:chrome": "testcafe chrome:headless ./test/**/*.spec.js --app \"yarn serve:ci\"",
    "test:ci:chrome-small": "testcafe \"chrome:headless:emulation:device=Nexus 5X\" ./test/**/*.spec.js --app \"yarn serve:ci\"",
    "test:ci:firefox": "testcafe firefox:headless ./test/**/*.spec.js --app \"yarn serve:ci\"",
    "test:e2e": "testcafe chrome ./test/**/*.spec.js --app \"yarn serve:ci\"",
    "test:eslint": "eslint src/ test/ --quiet"
  },
  "dependencies": {
    "@hot-loader/react-dom": "16.13.0",
    "hammerjs": "2.0.8",
    "history": "4.10.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hot-loader": "4.12.21",
    "react-recollect": "5.2.3",
    "react-router": "6.0.0-alpha.5",
    "react-router-dom": "6.0.0-alpha.5",
    "react-spring": "8.0.27",
    "styled-components": "5.1.1",
    "wc-spinners": "1.1.1",
    "workbox-window": "4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "copy-webpack-plugin": "^6.0.0",
    "css-loader": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "html-webpack-plugin": "^4.0.4",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.0",
    "sirv-cli": "^0.4.5",
    "style-loader": "^1.0.0",
    "testcafe": "1.8.4",
    "webpack": "^4.8.3",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0",
    "workbox-webpack-plugin": "^4.2.0"
  }
}
