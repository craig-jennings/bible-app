{
  "name": "bible-app",
  "description": "Simple Bible app backed by the ESV API",
  "version": "2.2.0",
  "main": "index.js",
  "author": "Craig Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:src": "vite build",
    "build:sw": "workbox injectManifest workbox.config.js",
    "ci": "npm-run-all ci:*",
    "ci:chrome": "testcafe chrome:headless ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "ci:chrome-small": "testcafe \"chrome:headless:emulation:device=Nexus 5X\" ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "ci:firefox": "testcafe firefox:headless ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "serve": "vite preview",
    "start": "vite",
    "test": "npm-run-all test:*",
    "test:e2e": "testcafe chrome ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "test:eslint": "eslint --ext js,ts,tsx --quiet .",
    "test:typescript": "tsc"
  },
  "dependencies": {
    "@react-spring/web": "9.3.0",
    "hammerjs": "2.0.8",
    "history": "5.1.0",
    "nanoid": "3.1.30",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.33.4",
    "react-router": "6.0.2",
    "react-router-dom": "6.0.2",
    "styled-components": "5.3.3",
    "wc-spinners": "1.1.1",
    "workbox-window": "6.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/hammerjs": "^2.0.40",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^2.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "testcafe": "^1.17.1",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "workbox-cli": "^6.4.1"
  }
}
