{
  "name": "bible-app",
  "description": "Simple Bible app backed by the ESV API",
  "version": "2.2.0",
  "main": "index.js",
  "author": "Craig Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:src": "snowpack build",
    "build:sw": "workbox injectManifest workbox.config.js",
    "ci": "npm-run-all ci:*",
    "ci:chrome": "testcafe chrome:headless ./test/**/*.spec.js --app \"yarn serve\"",
    "ci:chrome-small": "testcafe \"chrome:headless:emulation:device=Nexus 5X\" ./test/**/*.spec.js --app \"yarn serve\"",
    "ci:firefox": "testcafe firefox:headless ./test/**/*.spec.js --app \"yarn serve\"",
    "clean": "rimraf build",
    "serve": "sirv build --single",
    "start": "snowpack dev",
    "test": "npm-run-all test:eslint test:e2e",
    "test:e2e": "testcafe chrome ./test/**/*.spec.js --app \"yarn serve\"",
    "test:eslint": "eslint src/ test/ --quiet"
  },
  "dependencies": {
    "hammerjs": "2.0.8",
    "history": "5.0.0",
    "nanoid": "3.1.20",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-query": "3.6.0",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "react-spring": "8.0.27",
    "styled-components": "5.2.1",
    "wc-spinners": "1.1.1",
    "workbox-window": "6.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.12.7",
    "@snowpack/plugin-babel": "^2.1.6",
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/hammerjs": "^2.0.36",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.0",
    "sirv-cli": "^1.0.10",
    "snowpack": "^3.0.11",
    "testcafe": "^1.10.0",
    "typescript": "^4.1.3",
    "workbox-cli": "^6.0.2"
  }
}
