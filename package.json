  "private": true,
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "clean": "rimraf dist",
    "serve": "live-server dist/ --entry-file=index.html --no-browser",
    "start": "webpack-dev-server",
    "test": "npm-run-all test:e2e test:eslint",
    "test:ci": "testcafe chrome:headless,\"chrome:headless:emulation:device=Nexus 5X\",firefox:headless ./test/**/*.spec.js --app \"yarn serve\"",
    "test:e2e": "testcafe chrome,\"chrome:emulation:device=Nexus 5X\",firefox ./test/**/*.spec.js --app \"yarn serve\"",
    "test:eslint": "eslint src/ test/ --quiet"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "hammerjs": "2.0.8",
    "lit-element": "2.2.1",
    "lit-html": "1.1.1",
    "page": "1.11.4",
    "redux": "4.0.4",
    "redux-thunk": "2.3.0",
    "wc-spinners": "1.0.0",
    "workbox-window": "4.3.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.1",
    "css-loader": "^3.0.0",
    "eslint": "^6.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^3.2.0",
