{
  "name": "bible-app",
  "description": "Simple Bible app backed by the ESV API",
  "version": "2.2.0",
  "main": "index.js",
  "author": "Craig Jennings",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:src": "vite build",
    "build:sw": "workbox injectManifest workbox.config.js",
    "ci": "npm-run-all ci:*",
    "ci:chrome": "testcafe chrome:headless ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "ci:chrome-small": "testcafe \"chrome:headless:emulation:device=Nexus 5X\" ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "ci:firefox": "testcafe firefox:headless ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "prepare": "husky install",
    "serve": "vite preview",
    "start": "vite",
    "test": "npm-run-all test:*",
    "test:e2e": "testcafe chrome ./e2e/**/*.spec.ts --app \"pnpm serve\"",
    "test:eslint": "eslint src/ e2e/ --ext js,ts,tsx --quiet",
    "test:typescript": "tsc"
  },
  "dependencies": {
    "@react-spring/web": "9.2.3",
    "hammerjs": "2.0.8",
    "history": "5.0.0",
    "nanoid": "3.1.23",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.18.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "styled-components": "5.3.0",
    "wc-spinners": "1.1.1",
    "workbox-window": "6.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.12.7",
    "@types/hammerjs": "^2.0.36",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^7.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.2",
    "testcafe": "^1.10.0",
    "typescript": "^4.1.3",
    "vite": "^2.5.6",
    "workbox-cli": "^6.0.2"
  }
}
